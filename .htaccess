# ============================================================================
# File: .htaccess
# Description: This file defines configuration rules for the Apache web server, such as redirects, URL rewriting, access control, caching, and security settings.
# Created by: Vina Network
# ============================================================================

# Enable URL rewriting
RewriteEngine On
RewriteBase /

# If accessing /404 then rewrite to file 404.php
RewriteRule ^404$ 404.php [L]
# Redirect 301 from /404.php to /404
RewriteCond %{THE_REQUEST} \s/404\.php[\s?] [NC]
RewriteRule ^404\.php$ 404 [R=301,L]
# Redirect all non-existent pages to /404
ErrorDocument 404 /404

# ----------------------------------------------------------------------------
# üîê SECURITY
# ----------------------------------------------------------------------------

# Block direct access to sensitive files
<FilesMatch "^(config\.php|db\.php|bootstrap\.php|\.htaccess|\.env|composer\.json|composer\.lock|php\.ini|LICENSE|README\.md)$">
    Require all denied
</FilesMatch>

# Block direct URL access to private folders
RewriteRule ^(config|logs|include)/ - [F,L]

# Block access to hidden files (e.g., .git, .env)
RedirectMatch 404 /\.(?!well-known)

# Disable directory listing
Options -Indexes

# Block dangerous HTTP methods
<IfModule mod_rewrite.c>
    RewriteCond %{REQUEST_METHOD} ^(TRACE|TRACK|DELETE|PUT) [NC]
    RewriteRule .* - [F]
</IfModule>

# ----------------------------------------------------------------------------
# ‚ö° PERFORMANCE: COMPRESSION
# ----------------------------------------------------------------------------

# Enable Brotli compression
<IfModule mod_brotli.c>
    AddOutputFilterByType BROTLI_COMPRESS text/html text/plain text/xml text/css application/json application/javascript font/woff2 application/xml image/x-icon
</IfModule>

# Enable Deflate compression
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css application/json application/javascript font/woff2 application/xml image/x-icon
</IfModule>

# ----------------------------------------------------------------------------
# üóÇÔ∏è PERFORMANCE: CACHING
# ----------------------------------------------------------------------------

<IfModule mod_expires.c>
    ExpiresActive On
    # Images and favicon
    ExpiresByType image/jpg "access plus 1 month"
    ExpiresByType image/jpeg "access plus 1 month"
    ExpiresByType image/png "access plus 1 month"
    ExpiresByType image/gif "access plus 1 month"
    ExpiresByType image/webp "access plus 1 month"
    ExpiresByType image/x-icon "access plus 1 year"
    # CSS & JS
    ExpiresByType text/css "access plus 1 week"
    ExpiresByType application/javascript "access plus 1 week"
    ExpiresByType text/javascript "access plus 1 week"
    # Fonts
    ExpiresByType font/woff2 "access plus 1 month"
    # HTML, JSON, XML
    ExpiresByType text/html "access plus 1 hour"
    ExpiresByType application/json "access plus 1 hour"
    ExpiresByType application/xml "access plus 1 hour"
</IfModule>

<IfModule mod_headers.c>
    <FilesMatch "\.(jpg|jpeg|png|gif|webp|woff2|ico)$">
        Header set Cache-Control "public, max-age=2592000"
    </FilesMatch>
    <FilesMatch "\.(css|js)$">
        Header set Cache-Control "public, max-age=604800"
    </FilesMatch>
    <FilesMatch "\.(html|json|xml)$">
        Header set Cache-Control "public, max-age=3600"
    </FilesMatch>

    # Disable ETag headers
    Header unset ETag
</IfModule>
FileETag None

# ----------------------------------------------------------------------------
# üö´ PREVENT IMAGE HOTLINKING
# ----------------------------------------------------------------------------

RewriteCond %{HTTP_REFERER} !^$
RewriteCond %{HTTP_REFERER} !^https?://(www\.)?vina\.network/ [NC]
RewriteRule \.(jpg|jpeg|png|gif|webp)$ - [F,NC]
