# Start of .htaccess configuration

# Enable Rewrite Engine for URL rewriting
RewriteEngine On

# Redirect 301: Permanently redirect /dogcat to dogcat.vina.network
RewriteCond %{HTTP_HOST} ^(www\.)?vina\.network$ [NC]
RewriteRule ^dogcat/?(.*)$ https://dogcat.vina.network/$1 [L,R=301]

# Redirect 301: Permanently redirect /about/ to the homepage (/)
Redirect 301 /about/ /

# Restrict access to sensitive files (e.g., config.php, .htaccess, etc.)
<FilesMatch "^(config\.php|database\.php|\.htaccess|php\.ini)$">
    Order allow,deny
    Deny from all
</FilesMatch>

# Disable directory listing to prevent users from seeing folder contents
Options -Indexes

# Enable compression (Brotli if available, fallback to Gzip)
<IfModule mod_brotli.c>
    AddOutputFilterByType BROTLI_COMPRESS text/html text/plain text/xml text/css application/json application/javascript font/woff2 application/xml image/x-icon
</IfModule>
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css application/json application/javascript font/woff2 application/xml image/x-icon
</IfModule>

# Enable browser caching with Cache-Control and Expires headers
<IfModule mod_expires.c>
    ExpiresActive On
    # Images
    ExpiresByType image/jpg "access plus 1 month"
    ExpiresByType image/jpeg "access plus 1 month"
    ExpiresByType image/png "access plus 1 month"
    ExpiresByType image/gif "access plus 1 month"
    ExpiresByType image/webp "access plus 1 month" # Added for WebP
    ExpiresByType image/x-icon "access plus 1 month" # Added for favicon
    # CSS and JavaScript
    ExpiresByType text/css "access plus 1 week"
    ExpiresByType application/javascript "access plus 1 week"
    ExpiresByType text/javascript "access plus 1 week"
    # Fonts
    ExpiresByType font/woff2 "access plus 1 month"
    # HTML and others
    ExpiresByType text/html "access plus 1 hour"
    ExpiresByType application/json "access plus 1 hour" # Added for structured data
    ExpiresByType application/xml "access plus 1 hour" # Added for XML
</IfModule>

# Set Cache-Control headers for better caching control
<IfModule mod_headers.c>
    # Cache static assets for 1 month
    <FilesMatch "\.(jpg|jpeg|png|gif|webp|woff2|ico)$">
        Header set Cache-Control "public, max-age=2592000"
    </FilesMatch>
    # Cache CSS and JS for 1 week
    <FilesMatch "\.(css|js)$">
        Header set Cache-Control "public, max-age=604800"
    </FilesMatch>
    # Cache HTML, JSON, XML for 1 hour
    <FilesMatch "\.(html|json|xml)$">
        Header set Cache-Control "public, max-age=3600"
    </FilesMatch>
</IfModule>

# Disable ETag to reduce server overhead (optional, depending on server setup)
<IfModule mod_headers.c>
    Header unset ETag
</IfModule>
FileETag None

# Block unwanted HTTP methods (e.g., TRACE, TRACK) for security
<IfModule mod_rewrite.c>
    RewriteCond %{REQUEST_METHOD} ^(TRACE|TRACK)
    RewriteRule .* - [F]
</IfModule>

# Prevent image hotlinking (allow only from localhost and vina.network)
