# This .htaccess file only works on Apache servers. 
# Ensure that 'AllowOverride All' is enabled in your Apache configuration 

# Deny all access to this directory
<IfModule mod_authz_core.c>
    Require all denied
</IfModule>

<IfModule !mod_authz_core.c>
    Order deny,allow
    Deny from all
</IfModule>

RewriteEngine On
RewriteBase /core/

# Rules for specific endpoints
RewriteRule ^refresh-csrf$ refresh-csrf.php [L,NC]
RewriteRule ^clear-csrf$ clear-csrf.php [L,NC]
RewriteRule ^get-logs$ get-logs.php [L,NC]
