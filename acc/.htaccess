# ============================================================================
# File: acc/.htaccess
# Description: This file defines configuration rules for the Apache web server, such as redirects, URL rewriting, access control, caching, and security settings.
# Created by: Vina Network
# ============================================================================

RewriteEngine On
RewriteBase /acc/

# Connect page (Phantom wallet)
RewriteRule ^connect-p$ login/connect-p.php [L,NC]
RewriteCond %{THE_REQUEST} \s/acc/login/connect-p\.php [NC]
RewriteRule ^login/connect-p\.php$ connect-p [R=301,L]
# ====== Endpoints Wallet Auth ======
RewriteRule ^wallet-auth$ login/wallet-auth.php [L,NC]

# Disconnects page (Phantom wallet)
RewriteRule ^disconnect$ logout/disconnect.php [L,NC]

# Profile page
RewriteRule ^profile$ users/profile.php [L]
RewriteCond %{THE_REQUEST} \s/acc/users/profile\.php [NC]
RewriteRule ^users/profile\.php$ profile [R=301,L]

# ====== Endpoints write logs ======
RewriteRule ^write-logs$ write-logs.php [L,NC]
