# ============================================================================
# File: acc/.htaccess
# Description: This file defines configuration rules for the Apache web server, such as redirects, URL rewriting, access control, caching, and security settings.
# Created by: Vina Network
# ============================================================================

RewriteEngine On
RewriteBase /acc/

# Admin page
RewriteRule ^admin$ manage/admin.php [L,NC]
RewriteCond %{THE_REQUEST} \s/manage/admin\.php [NC]
RewriteRule ^manage/admin\.php$ /acc/admin [R=301,L]

# Connect Phantom wallet page
RewriteRule ^connect-phantom$ connect-phantom/connect-p.php [L,NC]
RewriteCond %{THE_REQUEST} \s/connect-phantom/connect\.php [NC]
RewriteRule ^connect-phantom/connect\.php$ /acc/connect-phantom [R=301,L]
# ====== Endpoints ======
RewriteRule ^wallet-auth$ connect-phantom/wallet-auth.php [L,NC]

# Profile page
RewriteRule ^profile$ profile-page/profile.php [L]
RewriteCond %{THE_REQUEST} \s/profile-page/profile\.php [NC]
RewriteRule ^profile-page/profile\.php$ /acc/profile [R=301,L]
# ====== Endpoints ======
RewriteRule ^disconnect$ profile-page/disconnect.php [L,NC]

# ====== Endpoints write logs ======
RewriteRule ^write-logs$ write-logs.php [L,NC]
